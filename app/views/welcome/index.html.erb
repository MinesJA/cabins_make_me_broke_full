<div id="cabin-grid">
  <%@cabins.each do |cabin|  %>
    <article class="cabin-card">
      <h4><a href="<%= cabin.listing_url %>"><%= cabin.name %></a></h4>

      <div class="carouselbox active">
        <ol class="content">
          <% cabin.images.each_with_index do |image, index| %>
            <% if(index == 0)  %>
              <li class="current"><%= image %></li>
            <% else %>
              <li><%= image %></li>
            <% end %>
          <% end %>
        </ol>
      </div>

      <p><%= cabin.description.slice(0,20) %>...</p>

      <ul>
        <li><%= cabin.sq_feet %> Sq ft</li>
        <li><%= cabin.rooms %> rooms</li>
      </ul>




    </article>

  <% end %>
</div>
