@font-face {
  font-family: 'Hansief Rough';
  src:url('Hansief Rough.otf');
}

@font-face {
  font-family: 'Hansief';
  src:url('Hansief.otf') format("truetype");
}


#logoImage {
  width: 10%;
}

h1 {
  font-family: "Hansief Rough";
  font-size: 300%;
  color: #A55D35;
}


.carouselbox {
  font-family: helvetica,sans-serif;
  font-size: 14px;
  width: 100px;
  position: relative;
  margin: 1em;
  border: 1px solid #ccc;
  box-shadow: 2px 2px 10px #ccc;
  overflow: hidden;
}
.content {
  margin: 0;
  padding: 0;
}
.content li {
  font-size: 100px;
  margin: 0;
  padding: 0;
  width: 100%;
  list-style: none;
  text-align: center;
}

.active {
  height: 130px;
}
.active li {
  position: absolute;
  top: 200px;
}
.active li.current {
  top: 30px;
}
